<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topActionBar"
        android:layout_above="@+id/bottomActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/promo_1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="#000000"
                android:padding="1dp"
                android:layout_margin="10dp"
                android:src="@drawable/promo_1" />

            <ImageView
                android:id="@+id/promo_2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/promo_1"
                android:background="#000000"
                android:padding="1dp"
                android:layout_margin="10dp"
                android:src="@drawable/promo_2" />

            <ImageView
                android:id="@+id/promo_3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/promo_2"
                android:background="#000000"
                android:padding="1dp"
                android:layout_margin="10dp"
                android:src="@drawable/promo_3"/>

            <ImageView
                android:id="@+id/promo_4"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/promo_3"
                android:background="#000000"
                android:padding="1dp"
                android:layout_margin="10dp"
                android:src="@drawable/promo_4"/>

        </RelativeLayout>

    </ScrollView>

    <include layout="@layout/bottom_toolbar"/>

</RelativeLayout>